<UserControl x:Class="Martius.App.TenantControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Martius.App"
             mc:Ignorable="d" 
             d:DesignHeight="580" d:DesignWidth="800">
    <Grid x:Name="TenantOuterGrid" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MinHeight="40" MaxHeight="60"/>
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Border BorderThickness="0,0,0,1" BorderBrush="Black">
            <DockPanel Grid.Row="0">
                <Label DockPanel.Dock="Left"
                                   Content="Арендаторы" Width="80" Margin="10,5" Height="25" VerticalAlignment="Center"
                                   HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center" />
                <TextBox x:Name="TenantSearchBox" DockPanel.Dock="Left"
                                     Width="75" Margin="10,5" Height="25" Padding="0, 2, 0, 2" />
                <Button x:Name="TenantSearchButton" DockPanel.Dock="Left" Margin="10,5" Height="25"
                                    Width="75"
                                    Content="Поиск" Click="TenantSearchButton_Click" />
                <Button x:Name="NewTenantButton"
                                    Width="125"
                                    Content="Новый арендатор" Margin="10,5" Height="25" HorizontalAlignment="Right"
                                    Click="NewTenantButton_Click" />
            </DockPanel>
        </Border>
        <ListView x:Name="TenantListView" Grid.Row="1" Background="#FFFCD496">
            <ListViewItem Height="59" />
        </ListView>
    </Grid>
</UserControl>
